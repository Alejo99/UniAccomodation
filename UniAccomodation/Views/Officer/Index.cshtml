@model AdvertListViewModel

@{
    ViewData["Title"] = "All pending adverts";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Hello officer!</h2>
        <p>Here is a list of all the pending adverts:</p>
        @foreach(var advert in Model.Adverts)
        {
            @Html.Partial("AdvertForOfficer", advert);
        }
    </div>
</div>

<div page-model="Model.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-default"
     page-class-selected="btn-primary"
     class="btn-group pull-right"></div>