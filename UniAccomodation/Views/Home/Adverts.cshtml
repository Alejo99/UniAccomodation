@model AdvertListViewModel
@{
    ViewData["Title"] = "All adverts";
}
<div class="row">
    <div class="col-xs-12">
        <h2>Hello visitor!</h2>
        <p>Here is a list of all the available adverts:</p>
        @foreach (var advert in Model.Adverts)
        {
            @Html.Partial("AdvertForStudent", advert);
        }
    </div>
</div>
<div page-model="Model.PagingInfo" page-action="Adverts" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-default"
     page-class-selected="btn-primary"
     class="btn-group pull-right"></div>